{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "!.next/cache/**", "dist/**"],
        "cache": true
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "lint": {
        "dependsOn": ["^lint"],
        "cache": false,
        "outputs": []
      },
      "check-types": {
        "dependsOn": ["^check-types"]
      }
    }
  }